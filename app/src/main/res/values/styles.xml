<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BigText" parent="TextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SmallText" parent="TextStyle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExtraSmallText" parent="TextStyle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ExtraSmallText.Negative" parent="ExtraSmallText">
        <item name="android:textColor">?attr/textColorNegative</item>
    </style>
</resources>